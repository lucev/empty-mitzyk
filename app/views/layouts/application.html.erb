<!DOCTYPE html>
<html>
<head>
  <title>Mitzyk</title>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag "scaffolds", "core" %>
  <%= stylesheet_link_tag "opera_mini" if opera_mini? %>
</head>
<body>
  <div id="wrap">
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
      <div id="user_nav">
        <% if user_signed_in? %>
          <%= link_to 'Home', root_path %>
          |
          <%= link_to 'Expenditures', expenditures_path %>
          |
          <%= link_to 'Categories', categories_path %>
          |
          <%= link_to 'Limits', limits_path %>      
          |
          <%= link_to "Sign out", destroy_user_session_path, :method => :delete %>
        <% end %>
      </div>
    <%= yield %>
    <% if user_signed_in? %>
      <div class="user_info">
        <hr/>
        Signed in as <%= current_user.email %>
      </div>
    <% end %>
  </div>
</body>
</html>
