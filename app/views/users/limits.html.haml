= simple_form_for @user, :url => set_limits_path, method: :put do |f|
  -if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this expenditure from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.input :monthly_limit, input_html: { class: 'form-control' }
  .form-group
    = f.input :weekly_limit, input_html: { class: 'form-control' }
  .form-group.actions
    = f.submit 'Save', class: 'btn btn-primary'
