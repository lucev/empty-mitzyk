= form_for @user, :url => set_limits_path do |f|
  -if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this expenditure from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :monthly_limit
    = f.text_field :monthly_limit
  .field
    = f.label :weekly_limit
    = f.text_field :weekly_limit
  .actions
    = f.submit 'Save', class: 'btn btn-primary'
