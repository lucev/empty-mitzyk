= form_for @expenditure do |f|
  .field
    = f.label :amount
    = f.text_field :amount
  .field
    = f.label :category_id
    = f.select :category_id, @categories_array
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :date
    = f.date_select :date
  .actions
    = f.submit 'Save'
